@using Gcon.Website.App_LocalResources
@using Gcon.Website.Helpers
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>@ViewBag.Title - Gcon</title>
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/Site.css")
    <!-- Bootstrap core CSS-->
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css">
    <!-- Custom fonts for this template-->
    <link href="~/Content/font-awesome.css" rel="stylesheet" type="text/css">
    <!-- Custom styles for this template-->
    <link href="~/Content/default.css" rel="stylesheet">
</head>
<body id="page_top">
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
        <label class="navbar-brand text-center">Gcon</label>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-lg-auto" id="masterNavTop">
                <li class="nav-item px-4" data-toggle="tooltip" data-placement="right" title="@recursos.Mural">
                    <a class="nav-link" href=@Url.Action("Index","Mural")>
                        <i class="fa fa-fw fa-calendar-check-o"></i>
                        <span class="nav-link-text">@recursos.Mural</span>
                    </a>
                </li>
                <li class="nav-item px-4" data-toggle="tooltip" data-placement="right" title="@recursos.Votacoes">
                    <a class="nav-link" href=@Url.Action("Index","Votacao")>
                        <i class="fa fa-fw fa-area-chart"></i>
                        <span class="nav-link-text">@recursos.Votacoes</span>
                    </a>
                </li>
                <li class="nav-item px-4" data-toggle="tooltip" data-placement="right" title="@recursos.Atas">
                    <a class="nav-link" href=@Url.Action("Index","Atas")>
                        <i class="fa fa-fw fa-table"></i>
                        <span class="nav-link-text">@recursos.Atas</span>
                    </a>
                </li>
                <li class="nav-item px-4" data-toggle="tooltip" data-placement="right" title="@recursos.ConfiguracaoDaConta">
                    <a class="nav-link" href=@Url.Action("Index","Configuracoes")>
                        <i class="fa fa-fw fa-wrench"></i>
                        <span class="nav-link-text">@recursos.ConfiguracaoDaConta</span>
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item nav-justified" data-placement="right">
                    <a class="nav-link" data-placement="right" data-toggle="modal" data-target="#mdLogout">
                        <i class="fa fa-fw fa-sign-out"></i>Logout
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <div id="divIdioma">
                <label>Selecione o idioma:</label>
                <select class="custom-select-sm">
                    <option>@Url.LangSwitcher("Português", ViewContext.RouteData, "pt-br")</option>
                    <option>@Html.ActionLink("Inglês", "ChangeLanguage", "Language", new { SelectedLanguage = "en-US" }, null)</option>
                    <option>@Url.LangSwitcher("Inglês", ViewContext.RouteData, "en-US")</option>
                    <option>@Html.ActionLink("Espanhol", "ChangeLanguage", "Language", new { SelectedLanguage = "es-ES" }, null)</option>
                </select>
            </div>
            <!-- Scroll to Top Button-->
            <a class="scroll-to-top rounded" href="#page_top">
                <i class="fa fa-angle-up"></i>
            </a>
        </footer>
        <!-- Modal de Logout -->
        <div class="modal fade" id="mdLogout" tabindex="-1" role="dialog" aria-labelledby="Logout" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Logout</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">Tem certeza que deseja sair do sistema?</div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
                        <a class="btn btn-primary" href="~/Login/Logout">Sair</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Scripts/jquery.easing.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/Scripts/default.js"></script>
</body>
</html>
